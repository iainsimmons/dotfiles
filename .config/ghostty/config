#################
## keybindings ##
#################
# Some useful encoded characters:
# \x0a = Enter/Return
# \x1b = Esc
# \x02 = <C-b> (tmux prefix)
macos-option-as-alt = true

# cursor movement to match macOS defaults
# move left and right between words
keybind = alt+left=unbind
keybind = alt+right=unbind
# move to start and end of line
keybind = cmd+left=csi:H
keybind = cmd+right=csi:F
# delete to start of line
keybind = cmd+backspace=text:\x15

# reload configuration
keybind = cmd+shift+r=reload_config

# save in vim/Neovim
keybind = super+s=text:\x1b\x1b:w\x0a

# tmux keybinds
# switch to window by index (1-based)
keybind = super+physical:one=text:\x021
keybind = super+physical:two=text:\x022
keybind = super+physical:three=text:\x023
keybind = super+physical:four=text:\x024
keybind = super+physical:five=text:\x025
keybind = super+physical:six=text:\x026
keybind = super+physical:seven=text:\x027
keybind = super+physical:eight=text:\x028
keybind = super+physical:nine=text:\x029
# Close current buffer in Neovim via tmux a keybind
keybind = super+b=text:\x02a
# Close current buffer in Neovim (without saving) via tmux B keybind
keybind = super+shift+b=text:\x02B
# Change to tmux copy mode
keybind = super+c=text:\x02[
# Detach session
keybind = super+shift+d=text:\x02d
# Split the current pane into two, top and bottom
keybind = super+e=text:\x02"
# Split the current pane into two, left and right
keybind = super+shift+e=text:\x02%
# Toggle Neotree (file tree) via tmux y keybind
keybind = super+f=text:\x02y
# Open lazygit in a new tmux window
keybind = super+g=text:\x02g
# Jump to new/existing window via sesh
# https://github.com/joshmedeski/sesh
keybind = super+j=text:\x02t
# switch to previous session
keybind = super+shift+j=text:\x02L
# switch to previous sesh session
keybind = super+l=text:\x02\x0C
# Open URLs 'joshmedeski/tmux-fzf-url'
keybind = super+o=text:\x02u
# Find files with Telescope, with grep, including hidden, ignoring .git via tmux Y keybind
keybind = super+p=text:\x02Y
# Create a new tmux window/tab
keybind = super+t=text:\x02c
# Break the current tmux pane out of the tmux window
keybind = super+shift+t=text:\x02!
# Kill/close the current tmux pane (and window if last pane)
keybind = super+w=text:\x02x
# Open yazi in a new tmux window
keybind = super+y=text:\x02A
# Toggle the zoom state of the current tmux pane
keybind = super+z=text:\x02z
# Cycle through tmux panes
keybind = super+right_bracket=text:\x02o
# previous window
keybind = super+shift+left_bracket=text:\x02p
# next window
keybind = super+shift+right_bracket=text:\x02n
# tmux-fuzzback (search scrollback with fuzzy finder)
keybind = super+backslash=text:\x02b
# Open tmux command input
keybind = super+semicolon=text:\x02:
# tmux built-in session overview
keybind = super+apostrophe=text:\x02s
# Rename the current tmux session
keybind = super+comma=text:\x02$
