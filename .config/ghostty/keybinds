#################
## keybindings ##
#################
# Some useful encoded characters:
# \x0a = Enter/Return
# \x1b = Esc
# \x02 = <C-b> (tmux prefix)
macos-option-as-alt = true

# cursor movement to match macOS defaults
# move left and right between words
keybind = alt+left=unbind
keybind = alt+right=unbind
# move to start and end of line
keybind = cmd+left=csi:H
keybind = cmd+right=csi:F
# delete to start of line
keybind = cmd+backspace=text:\x15

# reload configuration
keybind = cmd+shift+r=reload_config

keybind = global:cmd+alt+grave_accent=toggle_quick_terminal

# save in vim/Neovim
keybind = super+s=text:\x1b\x1b:w\x0a

